                                <li class=""><a href="<%= page_path(@conn, :index) %>"><span class="menu-label">NEW</span>Shop</a></li>
                                <li class=""><a href="<%= page_path(@conn, :index) %>">Blog</a></li>
                                <li class=""><a href="<%= page_path(@conn, :index) %>"><span class="menu-label highlight">HOT</span>Gallery</a></li>
                            </ul>
